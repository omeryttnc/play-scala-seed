# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /about                      controllers.HomeController.about()


# BOOKS
GET     /books                      controllers.BookController.index()
GET     /books/create               controllers.BookController.create()
POST    /books/save                 controllers.BookController.save()
GET     /books/edit/:id             controllers.BookController.edit(id:Int)
POST    /books/edit/:id             controllers.BookController.update(id:Int)
GET     /books/delete/:id           controllers.BookController.destroy(id:Int)
GET     /books/:id                  controllers.BookController.show(id:Int)



GET     /welcome/:name/:lastName    controllers.HomeController.welcomePage(name,lastName)


GET     /user                       controllers.UserController.index
GET     /add/:name/:email           controllers.UserController.addUser(name: String, email: String)
